<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0171C5"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/C"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button"
        android:layout_marginBottom="45dp"
        android:layout_toLeftOf="@+id/D"
        android:layout_toStartOf="@+id/D"
        android:onClick="sendSound"
        android:text="C"
        android:textColor="#0171C5"
        android:textSize="12pt" />

    <Button
        android:id="@+id/D"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/C"
        android:layout_toLeftOf="@+id/E"
        android:layout_toStartOf="@+id/E"
        android:onClick="sendSound"
        android:text="D"
        android:textColor="#0171C5"
        android:textSize="12pt" />

    <Button
        android:id="@+id/E"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/D"
        android:layout_centerHorizontal="true"
        android:onClick="sendSound"
        android:text="E"
        android:textColor="#0171C5"
        android:textSize="12pt" />

    <Button
        android:id="@+id/F"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/E"
        android:layout_toEndOf="@+id/E"
        android:layout_toRightOf="@+id/E"
        android:onClick="sendSound"
        android:text="F"
        android:textColor="#0171C5"
        android:textSize="12pt" />

    <Button
        android:id="@+id/G"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/F"
        android:layout_toEndOf="@+id/F"
        android:layout_toRightOf="@+id/F"
        android:onClick="sendSound"
        android:text="G"
        android:textColor="#0171C5"
        android:textSize="12pt" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="120dp"
        android:layout_toLeftOf="@+id/E"
        android:layout_toStartOf="@+id/E"
        android:background="@drawable/layout_buttons"
        android:longClickable="false"
        android:onClick="connectDevice"
        android:singleLine="false"
        android:text="Connect"
        android:textColor="#FFFFFF"
        android:textSize="5.5pt" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button"
        android:layout_alignEnd="@+id/G"
        android:layout_alignRight="@+id/G"
        android:background="@drawable/layout_buttons"
        android:onClick="disconnectDevice"
        android:text="DISCONNECT"
        android:textColor="#FFFFFF"
        android:textSize="5.5pt" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/C"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="134dp"
        android:text="Edison Sound Controller"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFFFF"
        android:textSize="14pt" />

</RelativeLayout>